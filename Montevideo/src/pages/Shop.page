<apex:page standardController="Shop__c">

    <apex:form >
        <apex:pageBlock title="Shop" mode="edit">
            <apex:pageBlockButtons >
                <apex:commandButton action="{!save}" value="Save"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection title="Shop Section" columns="1">
                <apex:inputField value="{!Shop__c.Name}" required="true"/>
                <apex:inputField value="{!Shop__c.Description__c}"/>
                <apex:inputField value="{!Shop__c.Site__c}"/>
                <apex:inputField value="{!Shop__c.User_Owner__c}"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
    
</apex:page>